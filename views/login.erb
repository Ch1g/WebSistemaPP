<h2 class="text-center"> Авторизация </h2>

<form class="form" action="/login" method="POST">
  <div class="form-group">
    <input  id="login" class="form-inline center-block" type="text" name="login" placeholder="Имя пользователя" />
  </div>
  <div class="form-group">
    <input id="password" class="form-inline center-block" type="password" name="pass" placeholder="Пароль" />
  </div>
  <% if @access then%>
    <div class="alert alert-danger text-center" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Ошибка:</span>
      <%= @access %>
    </div>
  <% end %>
  <input type="submit" class="btn btn-primary center-block" value="Войти">
</form>