<h2>Регистрация нового пользователя</h2>
<% if @message %>
  <div class="alert <%=@message[0] %>" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Ошибка:</span>
    <%= @message[1] %>
  </div>
<% end %>
<form class="form" action="/registration" method="POST">
  <div class="form-group">
    <div class="col-xs-6">
      <label for="first_name">
        <h4>Имя</h4></label>
      <input type="text" class="form-control" <%= params[:User_Name] ? "value='#{params[:User_Name]}'" : ''%> name="User_Name" placeholder="Имя" title="Введите имя" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <label for="last_name">
        <h4>Фамилия</h4></label>
      <input type="text" class="form-control" <%= params[:User_Surname] ? "value='#{params[:User_Surname]}'" : ''%> name="User_Surname" placeholder="Фамилия" title="Введите фамилию" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <label for="phone">
        <h4>Отчество</h4></label>
      <input type="text" class="form-control" <%= params[:User_Patronymic] ? "value='#{params[:User_Patronymic]}'" : ''%> name="User_Patronymic" placeholder="Отчество" title="Введите отчество" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <label for="mobile">
        <h4>Телефон</h4></label>
      <input type="tel" pattern="8-[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" class="form-control" <%= params[:User_Phone] ? "value='#{params[:User_Phone]}'" : ''%> name="User_Phone" placeholder="Контактный телефон" title="8-***-***-**-**" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <label for="Pavilion_Select"><h4>Выберите павильон:</h4></label>
      <select id="Pavilion_Select" class="form-control" name="Pavilion_Select">
        <% CRUD::Pavilion.all.each do |item| %>
          <option <%=params[:Pavilion_Select] && params[:Pavilion_Select].to_i == item.id_pavilion ? 'selected' : ''%>><%="#{item.id_pavilion}. Павильон №#{item.number}"%></option>
        <%end%>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <label for="email">
        <h4>Логин</h4></label>
      <input type="text" class="form-control" <%= params[:User_Login] ? "value='#{params[:User_Login]}'" : ''%> name="User_Login" placeholder="Логин" title="Введите имя пользователя" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <label for="password">
        <h4>Пароль</h4></label>
      <input type="password" class="form-control" <%= params[:User_Password] ? "value='#{params[:User_Password]}'" : ''%> name="User_Password" id="password" placeholder="Пароль" title="Введите пароль" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-6">
      <label for="password2">
        <h4>Повторите ввод</h4></label>
      <input type="password" class="form-control" name="User_Password2" id="password2" placeholder="Повторите пароль" title="Повторите пароль" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12">
      <br>
      <button class="btn btn-lg btn-success center-block" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Зарегистрироваться</button>
    </div>
  </div>

</form>
